<qti-assessment-item xmlns="http://www.imsglobal.org/xsd/imsqtiasi_v3p0" identifier="taza-transformacion-v1" title="Traslación de una taza" adaptive="false" time-dependent="false">
  <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
    <qti-correct-response>
      <qti-value>ChoiceA</qti-value>
    </qti-correct-response>
  </qti-response-declaration>
  <qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
    <qti-default-value>
      <qti-value>0</qti-value>
    </qti-default-value>
  </qti-outcome-declaration>
  <qti-item-body>
    <p>Considera el siguiente dibujo de una taza.</p>
    <p><img src="../images/Q63_taza_body.png" alt="Dibujo de una taza"/></p>
    <qti-choice-interaction max-choices="1" response-identifier="RESPONSE">
      <qti-prompt>¿En cuál de las siguientes opciones se representa la taza y su traslación?</qti-prompt>
      <qti-simple-choice identifier="ChoiceA"><p><img src="../images/Q63_traslacion.png" alt="Opción A"/></p></qti-simple-choice>
      <qti-simple-choice identifier="ChoiceB"><p><img src="../images/Q63_reflexion.png" alt="Opción B"/></p></qti-simple-choice>
      <qti-simple-choice identifier="ChoiceC"><p><img src="../images/Q63_rotacion.png" alt="Opción C"/></p></qti-simple-choice>
      <qti-simple-choice identifier="ChoiceD"><p><img src="../images/Q63_escalamiento.png" alt="Opción D"/></p></qti-simple-choice>
    </qti-choice-interaction>
  </qti-item-body>
  <qti-response-processing template="https://purl.imsglobal.org/spec/qti/v3p0/rptemplates/match_correct.xml"/>
</qti-assessment-item>