<ns0:qti-assessment-item xmlns:ns0="http://www.imsglobal.org/xsd/imsqtiasi_v3p0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 https://purl.imsglobal.org/spec/qti/v3p0/schema/xsd/imsqti_asiv3p0_v1p0.xsd" identifier="choice-baja-asistencia-niveles" title="Porcentaje de estudiantes con baja asistencia por nivel" adaptive="false" time-dependent="false">
  <ns0:qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
