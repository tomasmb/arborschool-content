<ns0:qti-assessment-item xmlns:ns0="http://www.imsglobal.org/xsd/imsqtiasi_v3p0" xmlns:ns2="http://www.w3.org/1998/Math/MathML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 https://purl.imsglobal.org/spec/qti/v3p0/schema/xsd/imsqti_asiv3p0_v1p0.xsd" identifier="q11-justificacion-5-es-25-porciento-de-20" title="Justificación de que 5 es el 25 % de 20" adaptive="false" time-dependent="false">
  <ns0:qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
    <ns0:qti-correct-response>
      <ns0:qti-value>ChoiceD</ns0:qti-value>
    </ns0:qti-correct-response>
  </ns0:qti-response-declaration>
  <ns0:qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
    <ns0:qti-default-value>
      <ns0:qti-value>0</ns0:qti-value>
    </ns0:qti-default-value>
  </ns0:qti-outcome-declaration>
  <ns0:qti-item-body>
    <ns0:qti-choice-interaction max-choices="1" response-identifier="RESPONSE">
      <ns0:qti-prompt>¿Cuál de las siguientes afirmaciones permite justificar que <ns2:math><ns2:mn>5</ns2:mn></ns2:math> es el <ns2:math><ns2:mrow><ns2:mn>25</ns2:mn><ns2:mo>%</ns2:mo></ns2:mrow></ns2:math> de <ns2:math><ns2:mn>20</ns2:mn></ns2:math>?</ns0:qti-prompt>
      <ns0:qti-simple-choice identifier="ChoiceA">Que <ns2:math><ns2:mrow><ns2:mn>20</ns2:mn><ns2:mo>+</ns2:mo><ns2:mn>5</ns2:mn><ns2:mo>=</ns2:mo><ns2:mn>25</ns2:mn></ns2:mrow></ns2:math>.</ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceB">Que <ns2:math><ns2:mn>5</ns2:mn></ns2:math>, <ns2:math><ns2:mn>20</ns2:mn></ns2:math> y <ns2:math><ns2:mn>25</ns2:mn></ns2:math> son múltiplos de <ns2:math><ns2:mn>5</ns2:mn></ns2:math>.</ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceC">Que <ns2:math><ns2:mn>5</ns2:mn></ns2:math> es divisor de <ns2:math><ns2:mn>20</ns2:mn></ns2:math>.</ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceD">Que <ns2:math><ns2:mn>5</ns2:mn></ns2:math> es la cuarta parte de <ns2:math><ns2:mn>20</ns2:mn></ns2:math>.</ns0:qti-simple-choice>
    </ns0:qti-choice-interaction>
  </ns0:qti-item-body>
