<ns0:qti-assessment-item xmlns:ns0="http://www.imsglobal.org/xsd/imsqtiasi_v3p0" xmlns:ns2="http://www.w3.org/1998/Math/MathML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 https://purl.imsglobal.org/spec/qti/v3p0/schema/xsd/imsqti_asiv3p0_v1p0.xsd" identifier="rectangular-grid-perimeter" title="Perímetro de una malla rectangular" adaptive="false" time-dependent="false">
  <ns0:qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
    <ns0:qti-correct-response>
      <ns0:qti-value>ChoiceB</ns0:qti-value>
    </ns0:qti-correct-response>
  </ns0:qti-response-declaration>
  <ns0:qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
    <ns0:qti-default-value>
      <ns0:qti-value>0</ns0:qti-value>
    </ns0:qti-default-value>
  </ns0:qti-outcome-declaration>
  <ns0:qti-item-body>
    <ns0:p>Una malla rectangular está formada por cuadrados de lado <ns2:math><ns2:mtext>2 cm</ns2:mtext></ns2:math>. La malla tiene <ns2:math><ns2:mtext>100</ns2:mtext></ns2:math> cuadrados de alto y <ns2:math><ns2:mtext>200</ns2:mtext></ns2:math> cuadrados de largo.</ns0:p>
    <ns0:qti-choice-interaction response-identifier="RESPONSE" max-choices="1">
      <ns0:qti-prompt>¿Cuál es el perímetro de la malla?</ns0:qti-prompt>
      <ns0:qti-simple-choice identifier="ChoiceA"><ns2:math><ns2:mtext>600 cm</ns2:mtext></ns2:math></ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceB"><ns2:math><ns2:mtext>1200 cm</ns2:mtext></ns2:math></ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceC"><ns2:math><ns2:mtext>40 000 cm</ns2:mtext></ns2:math></ns0:qti-simple-choice>
      <ns0:qti-simple-choice identifier="ChoiceD"><ns2:math><ns2:mtext>160 000 cm</ns2:mtext></ns2:math></ns0:qti-simple-choice>
    </ns0:qti-choice-interaction>
  </ns0:qti-item-body>
  <ns0:qti-response-processing template="https://purl.imsglobal.org/spec/qti/v3p0/rptemplates/match_correct.xml" />
</ns0:qti-assessment-item>