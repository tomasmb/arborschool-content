      <qti-simple-choice identifier="ChoiceB"><math xmlns="http://www.w3.org/1998/Math/MathML"><mn>75,4</mn></math></qti-simple-choice>
      <qti-simple-choice identifier="ChoiceC"><math xmlns="http://www.w3.org/1998/Math/MathML"><mn>73,4</mn></math></qti-simple-choice>
      <qti-simple-choice identifier="ChoiceD"><math xmlns="http://www.w3.org/1998/Math/MathML"><mn>71,4</mn></math></qti-simple-choice>
    </qti-choice-interaction>
  </qti-item-body>
