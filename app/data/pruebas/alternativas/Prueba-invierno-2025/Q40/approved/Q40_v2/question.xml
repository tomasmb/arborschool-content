      <qti-simple-choice identifier="ChoiceB">700</qti-simple-choice>
      <qti-simple-choice identifier="ChoiceC">1300</qti-simple-choice>
      <qti-simple-choice identifier="ChoiceD">1500</qti-simple-choice>
