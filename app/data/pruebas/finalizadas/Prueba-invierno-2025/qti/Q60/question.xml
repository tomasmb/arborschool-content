      <qti-simple-choice identifier="ChoiceB">-0,001</qti-simple-choice>
      <qti-simple-choice identifier="ChoiceC">0,001</qti-simple-choice>
      <qti-simple-choice identifier="ChoiceD">0,006</qti-simple-choice>
    </qti-choice-interaction>
  </qti-item-body>
