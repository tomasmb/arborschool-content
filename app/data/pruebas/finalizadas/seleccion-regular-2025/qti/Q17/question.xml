            <mspace width="0.2em"/>
            <mn>000</mn>
            <mo>&#183;</mo>
            <mfrac>
              <mn>60</mn>
              <mn>100</mn>
            </mfrac>
            <mo>)</mo>
          </mrow>
        </math>
      </qti-simple-choice>
      <qti-simple-choice identifier="ChoiceD">
        <math xmlns="http://www.w3.org/1998/Math/MathML">
          <mo>$</mo>
          <mrow>
